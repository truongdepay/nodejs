<form action="addpost" method="post">
    <div class="form-group">
        <label for="exampleInputEmail1">Title</label>
        <input type="text" name="title" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter title" value="<%= title %>">
    </div>
    <div class="form-group">
        <label for="exampleInputPassword1">Descriptions</label>
        <input type="text" name="description" class="form-control" id="exampleInputPassword1" placeholder="Enter Descriptions" value="<%= description %>">
    </div>
    <div class="form-group">
        <label for="">Contents</label>
        <textarea name="content" id="" cols="30" rows="10" class="form-control"><%= content %></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>